{
  "name": "monorepo-data-migration",
  "version": "1.0",
  "description": "Project Data Migration",
  "author": {
    "name": "NEM Vandy"
  },
  "private": true,
  "license": "UNLICENSED",
  "workspaces": {
    "packages": [
      "./apps/*",
      "./libs/*"
    ]
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start --watch",
    "start:dev": "concurrently -c \"cyan.bold, green.bold, blue.bold\" \"npm run leave\" \"npm run approval\"",
    "leave": "nest start @apps/leave --watch",
    "approval": "nest start @apps/approval --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/leave/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/leave/test/jest-e2e.json",
    "main-cli": "TS_NODE_PROJECT=./tsconfig.json ts-node -r tsconfig-paths/register ./apps/*/*/main-cli.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "m:generate": "ts-node migration-cli.ts migration generate",
    "m:run": "ts-node migration-cli.ts migration run",
    "m:revert": "ts-node migration-cli.ts migration revert",
    "m:create": "ts-node migration-cli.ts migration create",
    "m:show": "ts-node migration-cli.ts migration show",
    "m:create-schema": "ts-node migration-cli.ts migration create-schema",
    "m:seed": "ts-node migration-cli.ts migration seed"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.3",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.3.3",
    "@nestjs/platform-express": "^10.3.3",
    "@nestjs/typeorm": "^10.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "commander": "^13.0.0",
    "dotenv": "^16.4.4",
    "exceljs": "^4.4.0",
    "inquirer": "^12.3.0",
    "kleur": "^4.1.5",
    "lodash": "^4.17.21",
    "nest-commander": "^3.12.5",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.3",
    "@swc/cli": "^0.3.9",
    "@swc/core": "^1.4.1",
    "@types/express": "^4.17.21",
    "@types/inquirer": "^8.1.3",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.17",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "@constants": "<rootDir>/constant",
      "@controllers": "<rootDir>/controller",
      "@configs": "<rootDir>/_config",
      "@helpers": "<rootDir>/helper",
      "@entities": "<rootDir>/io/entities",
      "@repositories": "<rootDir>/io/repository",
      "@services": "<rootDir>/io/service",
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1"
    },
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ]
  }
}
