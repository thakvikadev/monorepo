{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/leave/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/leave/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/leave",
  "projects": {
    "leave": {
      "type": "application",
      "root": "apps/leave",
      "entryFile": "main",
      "sourceRoot": "apps/leave/src",
      "compilerOptions": {
        "tsConfigPath": "apps/leave/tsconfig.app.json"
      }
    },
    "approval": {
      "type": "application",
      "root": "apps/approval",
      "entryFile": "main",
      "sourceRoot": "apps/approval/src",
      "compilerOptions": {
        "tsConfigPath": "apps/approval/tsconfig.app.json"
      }
    },
    "core": {
      "type": "library",
      "root": "libs/core",
      "entryFile": "index",
      "sourceRoot": "libs/core/src",
      "compilerOptions": {
        "tsConfigPath": "libs/core/tsconfig.lib.json"
      }
    }
  }
}